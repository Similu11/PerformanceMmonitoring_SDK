{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "typeRoots": ["node_modules/@types"],
    "module": "ESNext",
    "target": "ESNext",
    "noImplicitAny": true,
    "outDir": "lib",
    "noImplicitThis": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "./typings",
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}